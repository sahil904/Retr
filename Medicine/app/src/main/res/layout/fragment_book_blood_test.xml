<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="13dp"
    android:background="#eeeeee"
    android:layout_height="match_parent"
    tools:context="fragments.BookLabTest">
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/success_layout_lab"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/success_iv"
            android:src="@drawable/success_drawable"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <TextView
            android:fontFamily="@font/average"
            android:textSize="20sp"
            android:textColor="@color/fab_color_1"
            android:layout_marginTop="450dp"
            android:layout_centerInParent="true"
            android:text="Sussessfully Submitted !!!!!!"
            android:id="@+id/success_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lab_test_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/view_pager_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true" />
            <android.support.design.widget.TabLayout
                android:id="@+id/tabDots_"
                android:layout_below="@+id/pager"
                android:layout_width="match_parent"
                custom:tabGravity="center"
                android:layout_alignParentBottom="true"
                android:background="@drawable/tab_indicator_selected"
                android:layout_height="20dp">
            </android.support.design.widget.TabLayout>
        </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/view_pager_layout"
        android:layout_marginTop="23dp"
        android:id="@+id/name_bl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            custom:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:inputType="text"
            android:id="@+id/name_bl_et"
            android:padding="5dp"
            android:hint="Enter Your Name"
            android:background="@drawable/borderless_react"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/name_bl_layout"
        android:layout_marginTop="13dp"
        android:id="@+id/mobile_bl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            custom:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:inputType="number"
            android:id="@+id/mobile_bl_et"
            android:padding="5dp"
            android:hint="Enter Your Mobile Number"
            android:background="@drawable/borderless_react"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/mobile_bl_layout"
        android:layout_marginTop="13dp"
        android:id="@+id/address_bl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            custom:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:inputType="text"
            android:id="@+id/address_bl_et"
            android:padding="5dp"
            android:hint="Enter Your Address"
            android:background="@drawable/borderless_react"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/submit_bl_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/fab_color_1"
        android:layout_below="@+id/address_bl_layout"
        android:layout_marginTop="43dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
</ScrollView>