<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#410f9072"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragments.Contact">
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/contact_progress"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            app:cardMaxElevation="5dp"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:id="@+id/fs_layout"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<ImageView
    android:id="@+id/wallet_iv"
    android:padding="12dp"
    android:src="@drawable/customer_care"
    android:layout_centerHorizontal="true"
    android:layout_width="180dp"
    android:layout_height="180dp" />
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/wallet_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="12dp"
                android:src="@drawable/phone_icon"
                android:id="@+id/phone_iv"
                android:scaleType="fitXY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="12dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:id="@+id/pre_num_tv"
                android:layout_marginLeft="12dp"
                android:text="+91:"
                android:layout_toRightOf="@+id/phone_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="12dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf= "@+id/pre_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/mail_sign"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/pre_num_tv"
                android:src="@drawable/mail_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/mail_tv"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/mail_sign"
                android:layout_below="@+id/pre_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
